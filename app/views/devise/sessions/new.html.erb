<div class="form-outline form-background book-views">
  <div>&nbsp;</div>
  <div>&nbsp;</div>

  <div class="input-form">
    <h2 class="form-header">Log in</h2>
    <div> &nbsp; </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="col-md-12 form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"form-control", placeholder:"ex. joe.smith@example.com" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions btn btn-primary">
      <%= f.submit "Log in", class:"submit-styling" %>
    </div>

<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>
