<div>&nbsp;</div>
<div class="container">
  <div class="container">
    <h2>Here's a History of What You've Sold:</h2>
  </div>
  <div>&nbsp;</div>
<table>
  <thead>
    <tr>
      <th class="col-md-2 center">Subject</th>
      <th class="col-md-2 center">Title</th>
      <th class="col-md-2 center">Author</th>
      <th class="col-md-1 center">Price</th>
      <th class="col-md-3 center">Description</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="center"><%= book.category.try :subject %></td>
        <td class="center"><%= book.title %></td>
        <td class="center"><%= book.author %></td>
        <td class="center"><%= number_to_currency book.price %></td>
        <td class="center"><%= book.description %></td>
        <!-- <td><%= link_to 'Show', book %></td> -->
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <div> &nbsp; </div>
<br>

</div>
