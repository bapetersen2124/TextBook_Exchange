<div class="input-form overflow-hidden">
<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :publisher %>
    <%= form.text_field :publisher, id: :book_publisher, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :edition %>
    <%= form.text_field :edition, id: :book_edition, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :year_published %>
    <%= form.text_field :year_published, id: :book_year_published, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :price %>
    <%= form.text_field :price, id: :book_price, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12 form-group poppins">
    <%= form.label :description %>
    <%= form.text_area :description, id: :book_description, class:"form-control" %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-12 poppins">
    <%= form.label :subject %>
    <%= form.select :category_id, @categories.all.collect {|c| [c.subject, c.id]}, {include_blank: "Please select a category"}, class:"form-control" %>
  </div>
</div>

<%= form.hidden_field :seller_id, value: current_user.id %>

<div class="row">
  <div class="container form-group col-md-12 poppins">
    <strong>Upload an Image:</strong>
    <%= form.file_field :image %>
  </div>
</div>

<div>&nbsp;</div>

<div class="row">
<div class="container">
  <div class="actions btn btn-primary poppins">
    <%= form.submit "Submit", class:"submit-styling" %>
  </div>
</div>
</div>
<% end %>

<div>&nbsp;</div>

</div>
