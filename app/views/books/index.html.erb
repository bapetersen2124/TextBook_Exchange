<div class="container">

<div class="h1-center">
  <h1 id="new-additions" class="btn btn-success new-additions poppins">Newest Additions</h1>
</div>


<table id="top-additions" class="table table-striped poppins"  style="display:none;">
  <thead>
    <tr>
      <th class="col-md-2 center">Subject</th>
      <th class="col-md-3 center">Title</th>
      <th class="col-md-2 center">Author</th>
      <th class="col-md-2 center">Price</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="center"><%= book.category.try :subject %></td>
        <td class="center" ><a data-toggle="popover" data-placement="right" data-animation="true" data-trigger="hover" title="<%= book.title %>" data-content="<%= book.description %>">
            <%= book.title.truncate_words(4) %>
          </a></td>
        <td class="center"><%= book.author.truncate_words(3) %></td>
        <td class="center"><%= number_to_currency book.price %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class:"col-md-1" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"col-md-1" %></td>
      </tr>
      <!-- Begin Popover -->
    <% end %>
  </tbody>
</table>
<div class="row col-md-12 new-book-align">
  <%= link_to 'New Book', new_book_path, class:"poppins" %>
</div>


  <div> &nbsp; </div>
<br>

</div>
